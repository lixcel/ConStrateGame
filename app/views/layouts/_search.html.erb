<div class="mb-3">
  <div class="text-center border fw-bold mb-2">
    サイト内検索
  </div>
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, class: "form-control", type: "none" %>
    <%= f.select :range, options_for_select([['ユーザー','User'],['投稿','Post']]) %>
    <%= f.select :search, options_for_select([["前方一致","forward_match"],["部分一致","partial_match"]]) %>
    <%= f.submit "検索", class: "btn right mt-1" %>
  <% end %>
</div>