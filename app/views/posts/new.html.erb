<div class="container mt-3 bg-light">
  <div class="row">
    <%= form_with model: Post.new, local: true do |f| %>
    <div class="form-group">
      <%= f.label :画像 %><br>
      <%= f.file_field :image, class: "image" %>
    </div>
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <% end %>
  </div>
</div>