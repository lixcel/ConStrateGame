  <div class="row m-3">
  <%= render 'posts/sidebar', tag_list: @tag_list %>

<div class="col-md-8">
  <h2><%= @tag.name %>タグの記事一覧</h2>


    <% @posts.each do |post| %>
  <div class="border shadow mb-2">
    <%= link_to post_path(post.id), class: "btn text-dark text-decoration-none" do %>
    <%= post.title %><br>
    <%= post.body %><br>
    <i class="fas fa-tag"></i><%= post.tags.map(&:name).join(',') %>
    <% end %>
  </div>
    <% end %>

  </div>

  <div class="col-md-2">
    rightbar
  </div>
</div>