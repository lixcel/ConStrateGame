<div class="right">
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete,class: "text-danger", remote: true do %>
    <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post,class: "text-primary", remote: true do %>
    <i class="far fa-heart"></i>
    <% end %>
  <% end %>
</div>