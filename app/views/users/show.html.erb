<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">

    <table class="text-center bg-light">


      <tbody>
        <% if @user == current_user %>

        <tr>
          <td class="p-3">
          <% if current_user.image? %>
          <%= image_tag current_user.image.url, size: '100x100',class: "rounded-circle" %>
          <% else %>
          <%= image_tag 'no_image.jpeg', size: '100x100',class: "rounded-circle" %>
          <% end %>
          </td>
        </tr>
        <tr>
          <td><%= current_user.nickname %></td>
        </tr>
        <tr>
          <td><%= current_user.introduction %></td>
        </tr>
        <tr>
          <td>
            <%= link_to edit_user_registration_path(current_user),class: "btn btn-light" do %>
            <i class="fa-solid fa-user-gear"></i>プロフィールの編集
            <% end %>
          </td>
        </tr>
        <% else %>
        <tr>
          <td class="p-3">
          <% if @user.image? %>
          <%= image_tag @user.image.url, size: '100x100',class: "rounded-circle" %>
          <% else %>
          <%= image_tag 'no_image.jpeg', size: '100x100',class: "rounded-circle" %>
          <% end %>
          </td>
        </tr>
       <tr>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <td><%= @user.introduction %></td>
        </tr>
        <% end %>
        </tr>
      </tbody>
    </table>

  </div>

</div>
