  <div class="row">
    <div class="col-md-4">

    <table class="text-center bg-light">


      <tbody>
        <% if @user == current_user %>

        <tr>
          <td class="p-3">
          <% if current_user.image? %>
          <%= image_tag current_user.image.icon.url,class: "rounded-circle" %>
          <% else %>
          <%= image_tag 'no_image.jpeg', size: '100x100',class: "rounded-circle" %>
          <% end %>
          </td>
        </tr>
        <tr>
          <td><%= current_user.nickname %></td>
        </tr>
        <tr>
          <td>
            <div class="d-flex justify-content-center my-4">
              <div>
              投稿数<br>
              <%= current_user.posts.count %>
              </div>
            <div class="px-4">
              フォロー<br>
              0
            </div>
            <div>
              フォロワー<br>
              0
            </div>

            </div>

          </td>
        </tr>
        <tr>
          <td class="text-left"><%= current_user.introduction %></td>
        </tr>
        <tr>
          <td>
            <%= link_to edit_user_registration_path,class: "btn btn-dark text-decoration-none mt-3" do %>
            <div class="text-light"><i class="fa-solid fa-user-gear"></i>プロフィールの編集</div>
            <% end %>
          </td>
        </tr>
        <% else %>
        <tr>
          <td class="p-3">
          <% if user.image? %>
          <%= image_tag user.image.icon.url, size: '100x100',class: "rounded-circle" %>
          <% else %>
          <%= image_tag 'no_image.jpeg', size: '100x100',class: "rounded-circle" %>
          <% end %>
          </td>
        </tr>
       <tr>
          <td><%= user.nickname %></td>
        </tr>
        <tr>
          <td>
            <div class="d-flex justify-content-center my-4">
              <div>
              投稿数<br>
              <%= user.posts.count %>
              </div>
            <div class="px-4">
              フォロー<br>
              0
            </div>
            <div>
              フォロワー<br>
              0
            </div>

            </div>

          </td>
        </tr>
        <tr>
          <td><%= user.introduction %></td>
        </tr>
        <% end %>
        </tr>
      </tbody>
    </table>

  </div>